<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MoneyRegistActivity" tools:layout_editor_absoluteY="81dp">

    <TextView
            android:text="@string/shopNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textShopName"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintBaseline_toBaselineOf="@+id/boughtShopName"/>
    <AutoCompleteTextView
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/boughtShopName"
            app:layout_constraintStart_toEndOf="@+id/textShopName"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent" tools:text="Name"/>
    <TextView
            android:text="@string/boughtPriceLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBaseline_toBaselineOf="@+id/boughtPriceText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:inputType="numberDecimal"
            android:ems="10"
            android:id="@+id/boughtPriceText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/boughtShopName"
            app:layout_constraintStart_toEndOf="@+id/textView2"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:gravity="right"
            app:layout_constraintEnd_toStartOf="@+id/textView4" tools:text="10000"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/boughtDateText"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/boughtPriceText" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/textView3"
            android:layout_marginStart="8dp" android:autofillHints="" android:focusable="false"/>
    <TextView
            android:text="@string/boughtDateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            app:layout_constraintBaseline_toBaselineOf="@+id/boughtDateText" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="@string/registPriceBtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/button"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="å††"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintBaseline_toBaselineOf="@+id/boughtPriceText"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"/>
</android.support.constraint.ConstraintLayout>